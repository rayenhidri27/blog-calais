{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}
	<div class="container">
		<div class="col-md-8 offset-md-2  my-5">
			<h1>Connexion</h1>
			<form method="post">
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" id="email" name="_username" class="form-control" aria-describedby="email">
				</div>

				<div class="form-group">
					<label for="password">Mot de passe</label>
					<input type="password" id="password" name="_password" class="form-control" id="password">
				</div>
				<button type="submit" class="btn btn-primary">Se connecter</button>
			</form>
		</div>
	</div>
{% endblock %}
